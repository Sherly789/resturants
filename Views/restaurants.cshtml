<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Restaurants</title>
  </head>
  <body>
    @if (Model.Count == 0)
    {
      <p>No Restaurants have been added yet!</p>
    }
    else
    {
      <h1>Here is a list of restaurants;</h1>
      <ul>
        @foreach (var restaurant in Model)
        {
          <li>@restaurant.GetName()</li>
        }
      </ul>
      <form action="restaurants/delete" method="post">
        <button type="submit">Clear All Restaurants</button>
      </form>
    }
    <p><a href="/restaurants/new">Add a New Restaurant</a></p>
    <p><a href="/">Return Home</a></p>

  </body>
</html>
